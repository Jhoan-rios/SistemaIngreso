@{
    var data = ViewData["userdata"] as List<Historia>;
}

<article class="EmpleadoPrincipal">
    <section class="Nombre">
        <a class="btn btn-primary" asp-controller="Empleados" asp-action="Create">Crear nuevo empleado</a>
        <h1>Bienvenido</h1>
        <h1>@ViewBag.CookieNombre</h1>
        <a class="btn btn-danger" asp-controller="Login" asp-action="Index">Cerrar sesion</a>
    </section>
    <section class="TablaHistorial">
        <table class="table table-hover table-striped">
            <thead>
                <tr class="bg-info text-white text-center">
                    <th>HORA DE ENTRADA</th>
                    <th>HORA DE SALIDA</th>
                </tr>
            </thead>
                
            <tbody style="vertical-align: middle;">
                @foreach(var fechas in data){
                    <tr class="text-white text-center">
                        <td>@fechas.HoraEntrada</td>
                        <td>@fechas.HoraSalida</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
    <section class="Botones">
        <a class="btn btn-warning btn-lg" asp-action="Entrada">Marcar entrada</a>
        <a class="btn btn-success btn-lg" asp-action="Salida">Marcar salida</a>
        <a class="btn btn-danger btn-lg" asp-controller="Login" asp-action="Index">Eliminar empleado</a>
    </section>
    
</article>



