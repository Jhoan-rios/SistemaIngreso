<style>
    .form {
  display: flex;
  flex-direction: column;
  gap: 10px;
  max-width: 350px;
  padding: 20px;
  border-radius: 20px;
  position: relative;
  background-color: #1a1a1a;
  color: #fff;
  border: 1px solid #333;
  margin-left: 60px;
}

.title {
  font-size: 28px;
  font-weight: 600;
  letter-spacing: -1px;
  position: relative;
  display: flex;
  align-items: center;
  padding-left: 30px;
  color: #00bfff;
}

.title::before {
  width: 18px;
  height: 18px;
}

.title::after {
  width: 18px;
  height: 18px;
  animation: pulse 1s linear infinite;
}

.title::before,
.title::after {
  position: absolute;
  content: "";
  height: 16px;
  width: 16px;
  border-radius: 50%;
  left: 0px;
  background-color: #00bfff;
}

.message, 
.signin {
  font-size: 14.5px;
  color: rgba(255, 255, 255, 0.7);
}

.signin {
  text-align: center;
}

.signin a:hover {
  text-decoration: underline royalblue;
}

.signin a {
  color: #00bfff;
}

.flex {
  display: flex;
  width: 100%;
  gap: 6px;
}

.form label {
  position: relative;
}

.form label .input {
  background-color: #333;
  color: #fff;
  width: 100%;
  padding: 20px 05px 05px 10px;
  outline: 0;
  border: 1px solid rgba(105, 105, 105, 0.397);
  border-radius: 10px;
}

.form label .input + span {
  color: rgba(255, 255, 255, 0.5);
  position: absolute;
  left: 10px;
  top: 0px;
  font-size: 0.9em;
  cursor: text;
  transition: 0.3s ease;
}

.form label .input:placeholder-shown + span {
  top: 12.5px;
  font-size: 0.9em;
}

.form label .input:focus + span,
.form label .input:valid + span {
  color: #00bfff;
  top: 0px;
  font-size: 0.7em;
  font-weight: 600;
}

.input {
  font-size: medium;
}

.submit {
  border: none;
  outline: none;
  padding: 10px;
  border-radius: 10px;
  color: #fff;
  font-size: 16px;
  transform: .3s ease;
  background-color: #00bfff;
}

.submit:hover {
  background-color: #00bfff96;
}
</style>

@model Empleado
@{
  ViewData["Title"] = "Crear empleado";  
}
<form class="form"  method="post" asp-action="Create">
            <p class="title">Crear empleado</p>
                <div class="flex">
                <label>
                    <input class="input" asp-for="Nombre" type="text" placeholder="" required="">
                    <span>Nombre</span>
                </label>

                <label>
                    <input class="input" asp-for="Apellido" type="text" placeholder="" required="">
                    <span>Apellido</span>
                </label>
            </div>  
                    
            <label>
                <input class="input" asp-for="Correo" type="email" placeholder="" required="">
                <span>Correo</span>
            </label> 
            <label for="">
                <select name="TipoDocumento" asp-for="TipoDocumento">
                    <option disabled selected>Tipo documento</option>
                    <option value="Cedula">C.C</option>
                    <option value="Targeta Identidad">T.I</option>
                    <option value="Pasaporte">Pasaporte</option>
                </select>
                <span>Tipo documento</span>
            </label>
            <label>
                <input class="input" asp-for="Documento" type="number" placeholder="" required="">
                <span>Documento</span>
            </label>
            <label asp-for="Contrase単a">
                <input class="input form-cpntrol1" asp-for="Contrase単a" type="password" placeholder="" required="">
                <span asp-validation-for="Contrase単a" class="text-danger">Contrase単a</span>
            </label>
            <button class="submit">Crear empleado</button>
</form>